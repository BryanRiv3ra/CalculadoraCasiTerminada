<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewINICIO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF7B00"
        android:text="CALCULADORA DE INTEGRALES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        tools:background="#FF7B00" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="APLICACION DE TEMAS VISTOS EN CLASE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnCalculator"
            android:layout_width="140dp"
            android:layout_height="63dp"
            android:layout_margin="8dp"
            android:text="Calculator"
            tools:backgroundTint="@color/material_dynamic_primary70" />

        <Button
            android:id="@+id/btnAbrirUrl"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:padding="16dp"
            android:text="Visitar pÃ¡gina" />

        <Button
            android:id="@+id/btnCredits"
            android:layout_width="140dp"
            android:layout_height="59dp"
            android:layout_margin="8dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="Credits" />

    </LinearLayout>

</LinearLayout>
