
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ft"
    android:orientation="vertical"
    android:padding="8dp">

    <Spinner
        android:id="@+id/spinner_Integrales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <!-- Layout principal para límites -->
    <LinearLayout
        android:id="@+id/layoutLimites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone">

        <!-- Layout horizontal para límites inferior y superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etLimiteInferior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:hint="Límite inferior"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:longClickable="false"
                android:textIsSelectable="false"
                android:inputType="none"
                android:textColorHint="#808080" />

            <EditText
                android:id="@+id/etLimiteSuperior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:hint="Límite superior"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:longClickable="false"
                android:textIsSelectable="false"
                android:inputType="none"
                android:textColorHint="#808080" />
        </LinearLayout>

        <!-- Campos adicionales en vertical -->
        <EditText
            android:id="@+id/etSustitucion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Ingrese sustitución u = ..."
            android:visibility="gone" />

        <EditText
            android:id="@+id/etFuncionDV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Ingrese dv"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etVariableDerivada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Variable de derivación (x o y)"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etValorY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Valor de y"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtPantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="34sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint=" #FF7B00"
            android:text="AC"
            android:textColor="@color/black" />

        <View
            android:layout_width="57dp"
            android:layout_height="50dp"
            android:background="@drawable/blt" />

        <Button
            android:id="@+id/btnRegresarcalcu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#078FC5"
            android:text="Regresar"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnX"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#078FC5"
                android:text="X"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnY"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#078FC5"
                android:text="Y"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnIntegral"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="∫ "
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnElevar"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="x^"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnParentesis1"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint=" #FF7B00"
                android:padding="8dp"
                android:text="("
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnParentesis2"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint=" #FF7B00"
                android:padding="8dp"
                android:text=")"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnValorAbsoluto"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="|"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEuler"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:text="e"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnSeno"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="sen"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnCoseno"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="cos"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnLogaritmo"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="ln"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnPi"
                android:layout_width="16dp"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#078FC5"
                android:padding="8dp"
                android:text="π"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#D68C45"
                android:padding="8dp"
                android:text="*"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnSuma"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#D68C45"
                android:padding="8dp"
                android:text="+"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#D68C45"
                android:text="/"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnRaiz"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#D68C45"
                android:padding="8dp"
                android:text="√"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnResta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:height="50dp"
                android:backgroundTint="#D68C45"
                android:padding="8dp"
                android:text="-"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="7"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="8"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnInfinito"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#078FC5"
                    android:padding="8dp"
                    android:text="∞"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="5"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="6"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnFlecha"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#078FC5"
                    android:padding="8dp"
                    android:text="➜"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="1"
                    android:textColor="@color/black" />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="3"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnDx"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#078FC5"
                    android:padding="8dp"
                    android:text="dx"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#E3E7D3"
                    android:padding="8dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#078FC5"
                    android:padding="8dp"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFC300"
                    android:padding="8dp"
                    android:text="="
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:backgroundTint=" #FF7B00"
                    android:padding="8dp"
                    android:text=" ←"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>